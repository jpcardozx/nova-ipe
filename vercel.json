{
    "buildCommand": "npx tsc next.config.ts && npm run build:vercel",
    "installCommand": "npm install tailwindcss postcss autoprefixer typescript @types/node --no-save --force && npm install --force --no-optional",
    "framework": "nextjs",
    "ignoreCommand": "node -e \"process.exit(!(process.env.VERCEL_ENV === 'preview' || process.env.VERCEL_ENV === 'production') ? 0 : 1)\"",
    "outputDirectory": ".next",
    "env": {
        "NEXT_PUBLIC_SKIP_NATIVE_DEPS": "true",
        "NODE_OPTIONS": "--max-old-space-size=4096",
        "TAILWIND_MODE": "build",
        "NEXT_TELEMETRY_DISABLED": "1",
        "NEXT_FORCE_TAILWIND_DIRECT": "1",
        "VERCEL_FORCE_INSTALL_DEPS": "1",
        "CSS_MODULES_ALLOW_PATHS": "true",
        "NEXT_CONFIG_FILE": "next.config.ts",
        "NODE_PATH": "/node22/lib/node_modules:/lib/node_modules:/vercel/path0/node_modules"
    }
}
